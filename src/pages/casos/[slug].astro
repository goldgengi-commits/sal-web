---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { cases, type CaseStudy } from "../../data/cases";

export function getStaticPaths() {
  return cases.map((c) => ({
    params: { slug: c.slug },
    props: { c },
  }));
}

const { c } = Astro.props as { c: CaseStudy };
---

<BaseLayout title={`${c.title} — Synthetic Audience Lab`} description={c.subtitle}>
  <main class="mx-auto max-w-6xl px-6 py-16">
    <header class="sal-animate-fade-up">
      <p class="text-xs uppercase tracking-[0.2em] text-zinc-400">Casos de estudio</p>

      <div class="mt-6 flex items-center justify-between gap-4">
        <a href="/casos/" class="sal-cta sal-cta-secondary">← Volver a casos</a>

        <button
          type="button"
          data-cal-link="syntheticaudiencelab/demo-videollamada-20-min"
          data-cal-namespace="salDemo"
          data-cal-config='{"layout":"month_view"}'
          class="sal-cta"
        >
          Agendar demo
        </button>
      </div>

      <div class="mt-10">
        <div class="text-xs uppercase tracking-[0.2em] text-zinc-400">{c.tag}</div>
        <h1 class="mt-3 text-3xl md:text-5xl font-light tracking-tight">{c.title}</h1>
        <p class="mt-4 max-w-3xl text-zinc-300">{c.subtitle}</p>
      </div>

      <div class="mt-10 grid grid-cols-1 md:grid-cols-3 gap-4">
        {c.kpis.slice(0,3).map((k) => (
          <div class="rounded-3xl border border-zinc-800 bg-zinc-950/40 p-6">
            <div class="text-xs text-zinc-400">{k.label}</div>
            <div class="mt-2 text-3xl font-light text-zinc-100">{k.value}</div>
            <div class="mt-2 text-xs text-zinc-500">{k.note ?? "—"}</div>
          </div>
        ))}
      </div>

      {c.winNote ? (
        <p class="mt-6 text-sm text-zinc-400">
          <span class="text-zinc-200 font-medium">Resultado:</span> {c.winNote}
        </p>
      ) : null}
    </header>

    <!-- Contenido (placeholder). Luego lo conectamos a tu informe real por caso -->
    <section class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-4 sal-animate-fade-up">
      <div class="rounded-3xl border border-zinc-800 bg-zinc-950/30 p-6">
        <div class="text-xs text-zinc-400">Ganador</div>
        <div class="mt-2 text-sm text-zinc-200">Pendiente de volcar datos reales</div>
      </div>
      <div class="rounded-3xl border border-zinc-800 bg-zinc-950/30 p-6">
        <div class="text-xs text-zinc-400">Driver clave</div>
        <div class="mt-2 text-sm text-zinc-200">Pendiente</div>
      </div>
      <div class="rounded-3xl border border-zinc-800 bg-zinc-950/30 p-6">
        <div class="text-xs text-zinc-400">Recomendación</div>
        <div class="mt-2 text-sm text-zinc-200">Pendiente</div>
      </div>
    </section>
  </main>
</BaseLayout>
