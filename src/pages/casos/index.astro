---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { cases as allCases } from "../../data/cases";

const brand = "Synthetic Audience Lab";
const cases = Array.isArray(allCases) ? allCases : [];
---

<BaseLayout title={`Casos de estudio — ${brand}`}>
  <main class="mx-auto max-w-6xl px-6 py-16">
    <header class="sal-animate-fade-up">
      <p class="text-xs uppercase tracking-[0.2em] text-zinc-400">Casos de estudio</p>
      <h1 class="mt-3 text-3xl md:text-5xl font-light tracking-tight">
        Casos en detalle
      </h1>
      <p class="mt-4 max-w-3xl text-zinc-300">
        Aquí es donde se ve la parte técnica: qué se simuló, qué ganó y por qué.
      </p>

      <div class="mt-8 flex items-center justify-between gap-6">
        <a
          href="/"
          class="group inline-flex items-center gap-2 text-sm text-zinc-300 hover:text-white transition"
        >
          <span>Volver</span>
          <span aria-hidden="true" class="transition-transform duration-200 group-hover:translate-x-1">→</span>
        </a>

        <button
          type="button"
          data-cal-link="syntheticaudiencelab/demo-videollamada-20-min"
          data-cal-namespace="salDemo"
          data-cal-config='{"layout":"month_view"}'
          class="inline-flex items-center justify-center rounded-full border border-violet-500/35 bg-zinc-950/55 px-4 py-2 text-xs font-semibold text-white shadow-[0_18px_60px_-45px_rgba(139,92,246,0.55)] backdrop-blur hover:bg-zinc-950/75 hover:border-violet-400/55 transition"
        >
          Agendar demo
        </button>
      </div>
    </header>

    <section class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-4 sal-animate-fade-up">
      {cases.map((c) => (
        <a
          href={`/casos/${c.slug}/`}
          class="rounded-3xl border border-zinc-800 bg-zinc-950/40 p-6 hover:bg-zinc-950/55 transition"
        >
          <div class="text-xs uppercase tracking-[0.2em] text-zinc-400">{c.tag}</div>
          <div class="mt-2 text-lg font-light text-zinc-100">{c.title}</div>
          <div class="mt-3 text-sm text-zinc-400">{c.subtitle}</div>
          <div class="mt-5 text-sm text-zinc-300">Ver caso →</div>
        </a>
      ))}
    </section>
  </main>
</BaseLayout>